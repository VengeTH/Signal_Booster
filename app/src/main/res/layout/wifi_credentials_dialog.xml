<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="350dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextSSID"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter WiFi information"
        android:fontFamily="@font/antonfont"
        android:textSize="23dp"
        android:textAlignment="center"
        android:background="@color/transparent"
    />
    <EditText
        android:textAppearance="@style/HintTextStyle"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_bg"
        android:id="@+id/ssidEditText"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:hint="Enter WiFi Name"
        android:inputType="text" />

    <EditText
        android:textAppearance="@style/HintTextStyle"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:background="@drawable/rounded_bg"
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:hint="Enter WiFi Password"
        android:inputType="textPassword" />

</LinearLayout>
